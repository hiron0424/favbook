<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @book, url: books_path, local: true) do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :description %>
  <%= image_tag(@book.image.url) if @book.image && @book.image.url %>
  <%= f.hidden_field :image_cache %>

  <p>タイトル:<%= @book.name %></p>
  <p>本文:<%= @book.description %></p>
  <%= f.submit  "投稿する" %>
<% end %>

<%= form_with(model: @book, url: new_book_path, local: true, method: 'get') do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :description %>
  <%= f.hidden_field :image_cache %>
  <%= f.submit "もどる", name: 'back' %>
<% end %>