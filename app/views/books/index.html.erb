<h1>オススメBook一覧</h1>

<p><%= notice %></p>
<table border=1>
  <tr>
    <th>名前</th>
    <th>内容</th>
    <th>サンプル画像</th>
    <th>投稿者</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.description %></td>
    <td><%= image_tag book.image.url %></td>
    <td><%= book.user.name %></td>
    <td><%= link_to '詳細画面へ', book_path(book.id) %></td>
    <% if book.user_id == current_user.id %>
    <td><%= link_to '編集画面へ', edit_book_path(book.id),data: {confirm: '本当に編集していいですか？'} %></td>
    <td><%= link_to '削除する', book_path(book.id), method: :delete,data: {confirm: '本当に削除していいですか？'} %></td>
    <% else %>
    <% end %>
  </tr>
<% end %>
</table>
<br>
<%= link_to '新規登録画面へ', new_book_path, class: 'btn btn-primary' %>
