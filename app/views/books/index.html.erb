<h1>オススメBook一覧</h1>

<table border=1>
  <tr>
    <th>名前</th>
    <th>内容</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.description %></td>
    <td><%= link_to '詳細画面へ', book_path(book.id) %></td>
    <td><%= link_to '編集画面へ', edit_book_path(book.id),data: {confirm: '本当に編集していいですか？'} %></td>
    <td><%= link_to '削除する', book_path(book.id), method: :delete,data: {confirm: '本当に削除していいですか？'} %></td>
  </tr>
<% end %>
</table>

<%= link_to '新規登録画面へ', new_book_path, class: 'btn btn-primary' %>
