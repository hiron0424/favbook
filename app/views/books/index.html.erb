<div class="container">
  <h2>みんなのオススメBook一覧</h2>

  <p><%= notice %></p>

  <br>
  <div><%= link_to '新規登録画面へ', new_book_path, class: 'btn btn-primary' %></div>
  <br>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>名前</th> 
        <th>内容</th>
        <th>サンプル画像</th>
        <th>投稿者</th>
        <th></th>
      </tr>
    </thead>

    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.description %></td>
        <td><%= image_tag book.image.url %></td>
        <td><%= book.user.name %></td>
        <td><%= link_to '詳細画面へ', book_path(book.id) %></td>
      </tr>
    <% end %>
  </table>
</div>